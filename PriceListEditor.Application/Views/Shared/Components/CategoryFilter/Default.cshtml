@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-action="ProductList" asp-controller="Product" asp-route-category="" asp-route-productPage="@(ViewBag.ProductCount == 0 ? 1 : ViewBag.SelectedPage)" asp-route-pageSize="@ViewBag.SelectedPageSize" asp-route-priceSortOrder="@ViewBag.PriceSortOrder">Все продукты</a>
    @foreach (string category in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(category == ViewBag.SelectedCategory ? "btn-primary":"btn-outline-secondary")" asp-action="ProductList" asp-controller="Product" asp-route-category="@category" asp-route-productPage="@(ViewBag.ProductCount == 0 ? 1 : ViewBag.SelectedPage)" asp-route-pageSize="@ViewBag.SelectedPageSize" asp-route-priceSortOrder="@ViewBag.PriceSortOrder">@category</a>
    }
</div>

