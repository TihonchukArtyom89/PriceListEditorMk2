@model IQueryable<Product>
<h4 class="m-1 pb-2"> Cписок продуктов </h4>

@foreach (Product p in Model ?? Enumerable.Empty<Product>())
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>@p.ProductName
                <span class="badge rounded-pill bg-primary text-white" style="float:right">
                    <small>@p.ProductPrice ₽</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@p.ProductDescription</div>
    </div>
}